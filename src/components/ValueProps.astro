---
const props = [
  {
    title: 'Quality Products',
    description: 'Eagle Coin only deals in the best rare coins and bullion products.',
    icon: 'quality'
  },
  {
    title: 'Extensive Knowledge',
    description: 'Years of hands-on experience and self-teaching. David has been working coins on a national stage for years.',
    icon: 'knowledge'
  },
  {
    title: 'Authenticity Guaranteed',
    description: 'Every coin and bullion product is guaranteed to be genuine. Your peace of mind is our priority.',
    icon: 'authentic'
  }
];
---

<section class="py-20 bg-cream">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="font-display text-4xl font-bold text-navy mb-4">Why Choose Eagle Coin?</h2>
      <p class="text-text-dark/70 max-w-2xl mx-auto">We're committed to providing the best experience for collectors and investors alike.</p>
    </div>

    <!-- Value Props Grid -->
    <div class="grid md:grid-cols-3 gap-8">
      {props.map((prop) => (
        <div class="bg-white rounded-2xl p-8 shadow-lg shadow-navy/5 border border-cream-dark hover:shadow-xl hover:border-gold/30 transition-all duration-300 group">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-gold/20 to-gold-accent/20 flex items-center justify-center mb-6 group-hover:from-gold/30 group-hover:to-gold-accent/30 transition-colors">
            {prop.icon === 'quality' && (
              <svg class="w-7 h-7 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
            )}
            {prop.icon === 'knowledge' && (
              <svg class="w-7 h-7 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            )}
            {prop.icon === 'authentic' && (
              <svg class="w-7 h-7 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            )}
          </div>
          <h3 class="font-display text-xl font-semibold text-navy mb-3">{prop.title}</h3>
          <p class="text-text-dark/70 leading-relaxed">{prop.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
