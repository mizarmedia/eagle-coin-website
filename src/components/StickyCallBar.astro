---
// Floating call button for mobile - bottom right corner
---

<!-- Floating Call Button - Mobile Only -->
<a
  id="floating-call-btn"
  href="tel:208-810-5351"
  class="fixed bottom-4 right-4 z-40 md:hidden w-14 h-14 bg-gradient-to-br from-gold to-gold-accent rounded-full shadow-lg shadow-black/30 flex items-center justify-center transform translate-y-20 opacity-0 transition-all duration-300 hover:scale-110 active:scale-95"
  aria-label="Call Eagle Coin at 208-810-5351"
>
  <svg class="w-6 h-6 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
  </svg>
</a>

<script>
  const floatingBtn = document.getElementById('floating-call-btn');
  let ticking = false;

  function updateButton() {
    // Show after scrolling 300px
    if (window.scrollY > 300) {
      floatingBtn?.classList.remove('translate-y-20', 'opacity-0');
    } else {
      floatingBtn?.classList.add('translate-y-20', 'opacity-0');
    }
    ticking = false;
  }

  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(updateButton);
      ticking = true;
    }
  });

  updateButton();
</script>
