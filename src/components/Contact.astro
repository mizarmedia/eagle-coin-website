<section class="py-12 md:py-20 bg-cream-dark">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div>
        <h2 class="font-display text-4xl font-bold text-navy mb-6">Get In Touch</h2>
        <p class="text-text-dark/70 text-lg mb-8">
          Have questions about your collection? Ready to buy or sell? We'd love to hear from you.
        </p>

        <div class="space-y-6">
          <!-- Phone - prominent tap target on mobile -->
          <a href="tel:208-810-5351" class="flex items-center gap-4 p-3 -m-3 rounded-xl hover:bg-gold/5 transition-colors group">
            <div class="w-12 h-12 md:w-12 md:h-12 rounded-xl bg-gold/20 flex items-center justify-center flex-shrink-0 group-hover:bg-gold/30 transition-colors">
              <svg class="w-6 h-6 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-navy mb-1">Phone</h3>
              <span class="text-gold-accent text-xl md:text-lg font-medium">
                208-810-5351
              </span>
            </div>
          </a>

          <!-- Email -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-gold/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-navy mb-1">Email</h3>
              <a href="mailto:eaglecoinandpm@outlook.com" class="text-text-dark/70 hover:text-gold-accent transition-colors">
                eaglecoinandpm@outlook.com
              </a>
            </div>
          </div>

          <!-- Address -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-gold/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-navy mb-1">Current Location</h3>
              <p class="text-text-dark/70">
                839 E Winding Creek Dr, Suite 203<br />
                Eagle, ID 83616
              </p>
              <p class="text-sm text-gold-accent mt-2">
                Moving to 3210 E Chinden Blvd in March 2026
              </p>
            </div>
          </div>

          <!-- Hours -->
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-gold/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-navy mb-1">Hours</h3>
              <div class="text-text-dark/70 space-y-1">
                <p>Mon, Tue, Wed, Fri: 10am - 5pm</p>
                <p>Thu, Sat, Sun: Closed</p>
                <p class="text-sm text-gold-accent mt-2">Saturday hours returning March 2026</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div class="mt-8 md:mt-10">
          <h3 class="font-semibold text-navy mb-4">Follow Us</h3>
          <div class="flex gap-3">
            <a href="https://www.instagram.com/eaglerarecoins" target="_blank" rel="noopener noreferrer" class="w-12 h-12 min-w-[48px] min-h-[48px] rounded-xl bg-gold/20 flex items-center justify-center hover:bg-gold/30 transition-colors group">
              <svg class="w-6 h-6 text-gold-accent group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a href="https://www.ebay.com/str/blackeaglecoins" target="_blank" rel="noopener noreferrer" class="w-12 h-12 min-w-[48px] min-h-[48px] rounded-xl bg-gold/20 flex items-center justify-center hover:bg-gold/30 transition-colors group">
              <span class="text-gold-accent font-bold text-sm group-hover:scale-110 transition-transform">eBay</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Map - Static preview on mobile that links to Google Maps, embedded on desktop -->
      <div class="rounded-2xl overflow-hidden shadow-lg border border-cream">
        <!-- Mobile: Tappable static preview -->
        <a
          href="https://www.google.com/maps/dir/?api=1&destination=839+E+Winding+Creek+Dr+Suite+203+Eagle+ID+83616"
          target="_blank"
          rel="noopener noreferrer"
          class="block md:hidden relative h-[200px] bg-navy-light group"
        >
          <img
            src="https://maps.googleapis.com/maps/api/staticmap?center=839+E+Winding+Creek+Dr,Eagle,ID+83616&zoom=15&size=600x400&markers=color:gold%7C43.6966,-116.35444&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"
            alt="Map showing Eagle Coin location in Eagle, Idaho"
            class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity"
            loading="lazy"
            onerror="this.parentElement.innerHTML='<div class=\'flex items-center justify-center h-full bg-navy-light\'><span class=\'text-gold\'>Tap for directions</span></div>'"
          />
          <div class="absolute inset-0 flex items-center justify-center bg-navy/40 group-hover:bg-navy/20 transition-colors">
            <div class="bg-gold text-navy font-semibold px-4 py-2 rounded-lg flex items-center gap-2 shadow-lg">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Get Directions
            </div>
          </div>
        </a>

        <!-- Desktop: Full embedded map -->
        <div class="hidden md:block h-[400px] lg:h-full lg:min-h-[500px]">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2888.0873812394455!2d-116.35444!3d43.6966!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x54ae56f8c7c5eb5b%3A0x8b1c6f8d1f8d1e8a!2s839%20E%20Winding%20Creek%20Dr%2C%20Eagle%2C%20ID%2083616!5e0!3m2!1sen!2sus!4v1706889600000!5m2!1sen!2sus"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</section>
