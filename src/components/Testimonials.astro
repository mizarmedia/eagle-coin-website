---

<section class="py-12 md:py-20 bg-cream">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-8 md:mb-12">
      <!-- Google Badge -->
      <div class="inline-flex items-center gap-3 bg-white border border-cream-dark rounded-full px-6 py-3 mb-6 shadow-sm">
        <svg class="w-6 h-6" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <div class="flex items-center gap-2">
          <span class="text-navy font-semibold">4.9</span>
          <div class="flex text-gold-accent">
            {[...Array(5)].map(() => (
              <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <span class="text-text-dark/60 text-sm">(140+ reviews)</span>
        </div>
      </div>

      <h2 class="font-display text-3xl sm:text-4xl md:text-5xl font-bold text-navy mb-4">
        What Our Customers Say
      </h2>
      <p class="text-text-dark/70 text-base md:text-lg max-w-2xl mx-auto">
        Don't just take our word for it. Here's what collectors and investors across Idaho have to say.
      </p>
    </div>

    <!-- Testimonials Grid - 1 card on mobile, 6 on desktop -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {testimonials.map((testimonial, index) => (
        <div class={`bg-white rounded-2xl p-6 shadow-lg shadow-navy/5 border border-cream-dark hover:shadow-xl hover:border-gold/30 transition-all duration-300 ${index > 0 ? 'hidden md:block' : ''}`}>
          <!-- Stars -->
          <div class="flex text-gold-accent mb-4">
            {[...Array(testimonial.rating)].map(() => (
              <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-text-dark/80 mb-4 leading-relaxed">
            "{testimonial.quote}"
          </blockquote>

          <!-- Name -->
          <div class="text-navy font-semibold">
            {testimonial.name}
          </div>
        </div>
      ))}
    </div>

    <!-- CTA to Google Reviews -->
    <div class="text-center mt-8 md:mt-10">
      <a
        href="https://www.google.com/search?q=eagle+coin+%26+precious+metals#lrd=0x54afab2d0bbca25b:0x99d5947a77c08866,1"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-gold-accent hover:text-gold font-medium transition-colors min-h-[44px]"
      >
        <span>See all 140+ reviews on Google</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</section>
