---
const badges = [
  {
    icon: 'roundtable',
    title: 'Roundtable Trading',
    subtitle: 'Authorized Dealer',
    description: 'SW Idaho\'s ONLY member'
  },
  {
    icon: 'star',
    title: '5-Star Rating',
    subtitle: 'Google Reviews',
    description: 'Perfect customer rating'
  },
  {
    icon: 'shield',
    title: 'Authenticity',
    subtitle: 'Guaranteed',
    description: 'Every coin verified'
  },
  {
    icon: 'experience',
    title: 'Expert Knowledge',
    subtitle: 'Years of Experience',
    description: 'National-stage dealer'
  }
];
---

<section class="py-8 md:py-12 bg-navy-light border-y border-gold/20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-3 md:gap-6 lg:gap-8">
      {badges.map((badge, index) => (
        <div class="text-center group" data-reveal="fade-up" data-reveal-delay={index * 100}>
          <div class="inline-flex items-center justify-center w-12 h-12 md:w-16 md:h-16 rounded-full bg-gold/10 border border-gold/30 mb-2 md:mb-4 group-hover:bg-gold/20 group-hover:border-gold/50 transition-all duration-300">
            {badge.icon === 'roundtable' && (
              <svg class="w-6 h-6 md:w-8 md:h-8 text-gold transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
            )}
            {badge.icon === 'star' && (
              <svg class="w-6 h-6 md:w-8 md:h-8 text-gold transition-transform duration-300 group-hover:scale-110" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            )}
            {badge.icon === 'shield' && (
              <svg class="w-6 h-6 md:w-8 md:h-8 text-gold transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            )}
            {badge.icon === 'experience' && (
              <svg class="w-6 h-6 md:w-8 md:h-8 text-gold transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            )}
          </div>
          <h3 class="text-gold font-semibold text-sm md:text-lg">{badge.title}</h3>
          <p class="text-text-light/80 text-xs md:text-sm">{badge.subtitle}</p>
          <p class="text-text-light/50 text-xs mt-0.5 md:mt-1 hidden sm:block">{badge.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
