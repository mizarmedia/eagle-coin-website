---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/sell', label: 'Sell To Us' },
  { href: '/buy', label: 'Buy From Us' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-navy border-b border-gold/20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <img
          src="/images/logo.jpg"
          alt="Eagle Coin & Precious Metals"
          class="w-12 h-12 rounded-full shadow-lg group-hover:shadow-gold/30 transition-shadow object-cover"
        />
        <div class="hidden sm:block">
          <div class="font-display text-lg text-text-light font-semibold leading-tight">Eagle Coin</div>
          <div class="text-gold text-sm font-medium">& Precious Metals</div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'nav-link-underline text-sm font-medium transition-colors',
              currentPath === link.href
                ? 'text-gold'
                : 'text-text-light/80 hover:text-gold'
            ]}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- CTA Button -->
      <div class="flex items-center gap-4">
        <a href="tel:208-810-5351" class="hidden sm:flex items-center gap-2 text-text-light/90 hover:text-gold transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span class="text-sm font-medium">208-810-5351</span>
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 text-text-light/80 hover:text-gold transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden bg-navy-light border-t border-gold/20">
    <nav class="px-4 py-4 space-y-2">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={[
            'block py-2 px-4 rounded-lg text-sm font-medium transition-colors',
            currentPath === link.href
              ? 'bg-gold/20 text-gold'
              : 'text-text-light/80 hover:bg-gold/10 hover:text-gold'
          ]}
        >
          {link.label}
        </a>
      ))}
      <a href="tel:208-810-5351" class="flex items-center gap-2 py-2 px-4 text-gold font-medium">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Call 208-810-5351
      </a>
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('open');
  });
</script>
