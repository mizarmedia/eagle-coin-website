---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import SpotPriceTicker from '../components/SpotPriceTicker.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Buy From Us" description="Shop rare coins, US and Latin American coinage, and bullion products at Eagle Coin & Precious Metals in Eagle, Idaho.">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20 bg-navy">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="font-display text-4xl sm:text-5xl font-bold text-text-light mb-6">
          Buy Rare Coins & Bullion
        </h1>
        <p class="text-text-light/70 text-xl max-w-2xl mx-auto">
          Specializing in US and Latin American coinage, plus new and vintage bullion products.
        </p>
      </div>
    </section>

    <!-- Ways to Buy -->
    <section class="py-20 bg-cream">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display text-3xl font-bold text-navy mb-4">
            Ways to Purchase
          </h2>
          <p class="text-text-dark/70 text-lg max-w-2xl mx-auto">
            You have a number of ways to purchase items from Eagle Coin & Precious Metals!
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          <!-- Visit Office -->
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-cream-dark text-center">
            <div class="w-14 h-14 mx-auto rounded-xl bg-gold/20 flex items-center justify-center mb-4">
              <svg class="w-7 h-7 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="font-display text-xl font-semibold text-navy mb-2">Visit Our Office</h3>
            <p class="text-text-dark/60 text-sm">Come browse our inventory in person at our Eagle location.</p>
          </div>

          <!-- Coin Shows -->
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-cream-dark text-center">
            <div class="w-14 h-14 mx-auto rounded-xl bg-gold/20 flex items-center justify-center mb-4">
              <svg class="w-7 h-7 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="font-display text-xl font-semibold text-navy mb-2">Meet at Coin Shows</h3>
            <p class="text-text-dark/60 text-sm">Find us at regional coin shows throughout the year.</p>
          </div>

          <!-- Contact -->
          <div class="bg-white rounded-2xl p-6 shadow-lg border border-cream-dark text-center">
            <div class="w-14 h-14 mx-auto rounded-xl bg-gold/20 flex items-center justify-center mb-4">
              <svg class="w-7 h-7 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-display text-xl font-semibold text-navy mb-2">Contact Us</h3>
            <p class="text-text-dark/60 text-sm">Reach out via email or social media to inquire about inventory.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Specialization -->
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="font-display text-3xl font-bold text-navy mb-6">
              Our Specialization
            </h2>
            <p class="text-text-dark/70 text-lg mb-6 leading-relaxed">
              We specialize in United States and Latin American coinage. As well as bullion products, new and collectible vintage pieces.
            </p>
            <p class="text-text-dark/70 mb-8 leading-relaxed">
              Inventory is priced reasonably, so items sell quickly! If you're looking for something specific, don't hesitate to ask - our Roundtable Trading network gives us access to nationwide dealer inventory.
            </p>

            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <svg class="w-6 h-6 text-gold-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-text-dark/80">US Coins - Morgan dollars, gold coins, commemoratives</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="w-6 h-6 text-gold-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-text-dark/80">Latin American Coinage - Mexican gold, silver pesos</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="w-6 h-6 text-gold-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-text-dark/80">Gold & Silver Bullion - Eagles, bars, rounds</span>
              </div>
              <div class="flex items-center gap-3">
                <svg class="w-6 h-6 text-gold-accent flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-text-dark/80">Vintage Bullion - Collectible pieces with numismatic value</span>
              </div>
            </div>
          </div>

          <div class="relative">
            <div class="bg-gradient-to-br from-gold/10 to-gold-accent/10 rounded-2xl p-8">
              <img
                src="/images/hero-coins.jpg"
                alt="Collection of rare coins"
                class="rounded-xl shadow-xl w-full h-64 object-cover"
              />
            </div>
            <div class="absolute -bottom-4 -right-4 w-32 h-32 bg-gold/20 rounded-full blur-2xl"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- eBay Store -->
    <section class="py-20 bg-gradient-to-br from-navy to-navy-light">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-gold/20 flex items-center justify-center">
          <span class="text-gold font-bold text-2xl">eBay</span>
        </div>
        <h2 class="font-display text-3xl font-bold text-text-light mb-4">
          Shop Our eBay Store
        </h2>
        <p class="text-text-light/70 text-lg mb-8 max-w-2xl mx-auto">
          Browse and purchase from our online inventory on eBay. We maintain a selection of coins and bullion available for immediate purchase.
        </p>
        <a
          href="https://www.ebay.com/str/blackeaglecoins"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-gold to-gold-accent text-navy font-semibold rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300"
        >
          Visit blackeaglecoins on eBay
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
    </section>

    <!-- Instagram Feed Placeholder -->
    <section class="py-20 bg-cream-dark">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="font-display text-3xl font-bold text-navy mb-4">
          Latest Arrivals
        </h2>
        <p class="text-text-dark/70 text-lg mb-8 max-w-2xl mx-auto">
          Follow us on Instagram to see our latest inventory and coin finds.
        </p>
        <a
          href="https://www.instagram.com/eaglerarecoins"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-3 text-gold-accent hover:text-gold transition-colors text-lg font-medium"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          @eaglerarecoins
        </a>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-20 bg-cream">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="font-display text-3xl font-bold text-navy mb-6">
          Looking for Something Specific?
        </h2>
        <p class="text-text-dark/70 text-lg mb-8 max-w-2xl mx-auto">
          As a Roundtable Trading member, we have access to nationwide dealer inventory. Let us know what you're looking for!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:208-810-5351" class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-gold to-gold-accent text-navy font-semibold rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call 208-810-5351
          </a>
          <a href="mailto:eaglecoinandpm@outlook.com" class="inline-flex items-center justify-center px-8 py-4 border-2 border-navy text-navy font-semibold rounded-lg hover:bg-navy hover:text-text-light transition-all duration-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Email Us
          </a>
        </div>
      </div>
    </section>
  </main>

  <SpotPriceTicker />
  <Footer />
</Layout>
