---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import SpotPriceTicker from '../components/SpotPriceTicker.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Sell To Us" description="Get fair, transparent pricing for your coins and bullion at Eagle Coin & Precious Metals. House calls available. SW Idaho's trusted coin dealer.">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20 bg-navy">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="font-display text-4xl sm:text-5xl font-bold text-text-light mb-6">
          Sell Your Coins & Bullion
        </h1>
        <p class="text-text-light/70 text-xl max-w-2xl mx-auto">
          Get fair, market-based pricing from SW Idaho's trusted Roundtable Trading dealer.
        </p>
      </div>
    </section>

    <!-- Easy Process -->
    <section class="py-20 bg-cream">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display text-3xl font-bold text-navy mb-4">
            Selling Is Easy
          </h2>
          <p class="text-text-dark/70 text-lg max-w-2xl mx-auto">
            Selling to Eagle Coin & Precious Metals is simple and straightforward.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Option 1: Visit Shop -->
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-cream-dark">
            <div class="w-14 h-14 rounded-xl bg-gold/20 flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="font-display text-xl font-semibold text-navy mb-4">Visit Our Shop</h3>
            <p class="text-text-dark/70 mb-4">
              Bring your items directly to our Eagle location. We'll evaluate them on the spot and provide a fair offer.
            </p>
            <div class="bg-cream rounded-lg p-4">
              <p class="text-sm text-text-dark/60 mb-2">Current Location:</p>
              <p class="text-navy font-medium">839 E Winding Creek Dr, Suite 203</p>
              <p class="text-navy">Eagle, ID 83616</p>
              <p class="text-gold-accent text-sm mt-2">New location coming March 2026!</p>
            </div>
          </div>

          <!-- Option 2: House Calls -->
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-cream-dark">
            <div class="w-14 h-14 rounded-xl bg-gold/20 flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-gold-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <h3 class="font-display text-xl font-semibold text-navy mb-4">Schedule a House Call</h3>
            <p class="text-text-dark/70 mb-4">
              Can't make it to the shop? We offer house calls for your convenience, especially helpful for larger collections or if you're homebound.
            </p>
            <a href="tel:208-810-5351" class="inline-flex items-center gap-2 text-gold-accent font-medium hover:text-gold transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call 208-810-5351 to schedule
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- What We Buy -->
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display text-3xl font-bold text-navy mb-4">
            What We Buy
          </h2>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {[
            { title: 'US Coins', desc: 'Morgan dollars, Peace dollars, gold coins, commemoratives, and more' },
            { title: 'Latin American Coins', desc: 'Mexican gold, silver pesos, and other Latin American coinage' },
            { title: 'Gold Bullion', desc: 'American Eagles, Canadian Maple Leafs, bars, and rounds' },
            { title: 'Silver Bullion', desc: 'American Eagles, bars, rounds, and junk silver' },
            { title: 'Platinum & Palladium', desc: 'Coins, bars, and rounds in platinum and palladium' },
            { title: 'Rare & Collector Coins', desc: 'Key dates, errors, and high-grade numismatic pieces' }
          ].map((item) => (
            <div class="bg-cream rounded-xl p-6 border border-cream-dark hover:border-gold/30 transition-colors">
              <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-gold-accent flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <div>
                  <h3 class="font-semibold text-navy mb-1">{item.title}</h3>
                  <p class="text-text-dark/60 text-sm">{item.desc}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Our Promise -->
    <section class="py-20 bg-gradient-to-br from-navy to-navy-light">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display text-3xl font-bold text-text-light mb-4">
            Our Promise to You
          </h2>
        </div>

        <div class="bg-navy-light/50 rounded-2xl p-8 lg:p-10 border border-gold/20">
          <blockquote class="text-xl text-text-light/90 italic mb-8 leading-relaxed">
            "All offers are transparent, based off of current market prices. For high quality collector coins, we are confident that we will pay more than the other coin shops in the Boise area. And without question, we pay more than pawn shops for high quality coins."
          </blockquote>

          <div class="grid sm:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="w-12 h-12 mx-auto rounded-full bg-gold/20 flex items-center justify-center mb-3">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-gold font-semibold mb-1">Transparent</h3>
              <p class="text-text-light/60 text-sm">Market-based pricing</p>
            </div>
            <div class="text-center">
              <div class="w-12 h-12 mx-auto rounded-full bg-gold/20 flex items-center justify-center mb-3">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="text-gold font-semibold mb-1">Competitive</h3>
              <p class="text-text-light/60 text-sm">Best prices in the area</p>
            </div>
            <div class="text-center">
              <div class="w-12 h-12 mx-auto rounded-full bg-gold/20 flex items-center justify-center mb-3">
                <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <h3 class="text-gold font-semibold mb-1">Trustworthy</h3>
              <p class="text-text-light/60 text-sm">5-star reputation</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-20 bg-cream-dark">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="font-display text-3xl font-bold text-navy mb-6">
          Ready to Sell?
        </h2>
        <p class="text-text-dark/70 text-lg mb-8 max-w-2xl mx-auto">
          Contact us today for a free evaluation of your coins and bullion.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:208-810-5351" class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-gold to-gold-accent text-navy font-semibold rounded-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call 208-810-5351
          </a>
          <a href="mailto:eaglecoinandpm@outlook.com" class="inline-flex items-center justify-center px-8 py-4 border-2 border-navy text-navy font-semibold rounded-lg hover:bg-navy hover:text-text-light transition-all duration-300">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Email Us
          </a>
        </div>
      </div>
    </section>
  </main>

  <SpotPriceTicker />
  <Footer />
</Layout>
